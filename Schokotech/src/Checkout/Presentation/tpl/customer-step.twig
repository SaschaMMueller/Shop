{% extends "Application/Presentation/tpl/layout.twig" %}

{% block content %}
    {% include 'Checkout/Presentation/tpl/partials/checkout-navigation.twig' %}
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-auto offset-3">
                    <a href="cart">
                        <input type="button" class="update-cart-button" value="ZurÃ¼ck">
                    </a>
                </div>
            </div>
            <div class="white-space"></div>
            <form method="post" action="customer-step-save">
