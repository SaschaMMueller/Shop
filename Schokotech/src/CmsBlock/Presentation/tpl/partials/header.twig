<div class="container-fluid">
    <div class="row align-items-center header">
        <div class="col-2"></div>
        <div class="col-2">
            <a href="schokoladen">
                <img class="site-logo" src="Assets/Images/logo.png">
            </a>
        </div>
        <div class="col-6"></div>
        <div class="col-2">
            <a href="cart" style="text-decoration:none">
                <img class="cart-logo" src="https://i.ya-webdesign.com/images/shopping-cart-icon-png-3.png">
                <span class="badge badge-primary badge-pill">{{ cartItemTotalCount() }}</span>
            </a>
        </div>
    </div>
    <div class="white-space"></div>
    <div class="row justify-content-center">
        {% set message = displayMessage() %}
        {% if message is not empty %}
            <div class="col-md-auto message">
                {{ message }}
            </div>
        {% endif %}
    </div>
</div>
